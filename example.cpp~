#include <iostream>

using namespace std;

int main()
{
  srand(time(NULL));
  int guess;
  int answer = rand() % 100;
  int tries = 0;
  char plays = 'y';
  char quit;
  while (plays == 'y'){
  while (guess != answer){
    cout << "guess a number" << endl;
    cin >> guess;
    tries++;
    if (guess > answer){
      cout << "TOO BIG"<< endl;
    }
    if (guess < answer){
      cout << "too small" << endl;
    }
    if (guess == answer){
      cout << "good job! It took you: " << tries << "tries" << endl;
      }
    if (tries % 5 == 0){
      cout << "wanna give up?(y/n)" <<endl;
      cin >> quit;
      if (quit == 'y'){
	cout << "The answer was" << answer << endl;
      }
    }
  }
  cout << "Wanna play again?(y/n)" << endl;
  cin >> plays;
  if (plays == 'y'){
    answer = rand() % 100;
    tries = 0;
  }
  if (plays == 'n'){
    plays = 'n';
   }
}
}
